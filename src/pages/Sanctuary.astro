---
import Layout from "../layouts/Layout.astro"
import { db, Pics } from "astro:db"

const pics = await db.select().from(Pics)
---

<Layout>
  <main class='w-[1120px] py-32 mx-auto space-y-8 max-lg:w-full max-lg:px-8'>
    <article class='py-8 space-y-8'>
      <h1 class='text-center text-7xl font-Primary'>HANNI PHAM</h1>
      <h2 class='text-center text-4xl'>El Santuario</h2>
      <p class='text-center text-lg'>
        A <span class='text-dark-green'>beautiful place</span> where your dreams
        come true and <span class='text-dark-green'
          >all your worries disappear</span
        >.
      </p>
    </article>
    <div
      class='gap-4 space-y-4 columns-1 sm:columns-2 md:columns-3 lg:columns-4'
    >
      {
        pics.map((pic, index) => (
          <img class='rounded-xl' src={pic.imageUrl} alt={`Imagen #${index}`} />
        ))
      }
    </div>
  </main>
</Layout>
